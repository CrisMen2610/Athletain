{
  "compilerOptions": {
    "target": "ES2020", // Modern JS features and better async/await support
    "module": "ESNext", // For modern bundlers (Vite, Webpack 5, etc.)
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // DOM APIs and latest JS features
    "jsx": "react-jsx", // For React 17+ JSX transform
    "moduleResolution": "node", // Standard for Node.js projects
    "resolveJsonModule": true, // Allows importing .json files
    "isolatedModules": true, // Required for projects using Babel or SWC
    "esModuleInterop": true, // Interoperability with CommonJS modules
    "allowSyntheticDefaultImports": true, // Allows default imports from modules without default export
    "forceConsistentCasingInFileNames": true, // Prevents casing mismatches in imports
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skips type checking of declaration files for faster builds
    "noEmit": true, // Don't emit JS files (handled by bundler)
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src", "src/custom.d.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
